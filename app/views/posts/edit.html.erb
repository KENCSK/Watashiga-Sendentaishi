<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-sm-12">
      <h1 class="text-center mt-3">投稿編集</h1>
      <%= form_with model:@post, local:true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group col-md-12 col-sm-12">
          <label class="form-label">タイトル</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group col-md-12 col-sm-12">
          <label class="form-label">本文</label>
          <%= f.text_area :text, class: "form-control" %>
        </div>
        <div class="form-group col-md-12 col-sm-12">
          <label class="form-label">都道府県</label>
          <%=f.collection_select :prefecture_id, Prefecture.all, :id, :prefecture, class: "form-control" %>
        </div>
        <div class="form-group col-md-12 col-sm-12">
          <label class="form-label">住所</label>
          <%= f.text_field :address, class: "form-control" %>
        </div>
        <div class="form-group col-md-12 col-sm-12">
          <label class="form-label">画像</label><br>
          <%= attachment_image_tag @post, :post_image, format: 'jpeg', fallback: "no_image.jpg", size: '200x150' %><br>
          <%= f.attachment_field :post_image %>
        </div>
        <div class="col-md-12 col-sm-12 d-grid gap-2 d-md-block">
          <%= f.submit '編集する', class: "btn btn-success" %>
          <div class="text-right mt-2">
            <%= link_to "投稿に戻る", post_path(@post.id), class: "btn btn-primary" %>
            <%= link_to "マイページ", my_page_path, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>