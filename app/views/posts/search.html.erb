<h1>検索結果</h1>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--< render 'posts/userinfo',user: @user %>-->
    </div>
    <div class="col-md-8 offset-md-1">
      <h2><%= @keyword %></h2>
        <table class="table">
         <thead>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
         </thead>
