         <% @posts.each do |post| %>
          <tr>
            <td>
            </td>
            <td><%= link_to post.title, post_path(post.id) %></td>
            <th><%= post.text %></th>
            <th></th>
          </tr>
          <% end %>
          </tbody>
        </table>
     </div>
  </div>
</div>
