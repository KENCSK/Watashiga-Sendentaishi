<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-5 col-sm-10">
      <h1 class="text-center mt-3">宣伝投稿</h1>
      <%= form_with model:@post, local:true do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group col-md-12 col-sm-12">
          <label class="form-label">タイトル</label>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group col-md-12 col-sm-12">
          <label class="form-label">本文</label>
          <%= f.text_area :text, class: "form-control" %>
        </div>
        <div class="form-group col-md-12 col-sm-12">
          <label class="form-label">都道府県</label>
          <%=f.collection_select :prefecture_id, Prefecture.all, :id, :prefecture, {prompt: "必ず都道府県を選択してください"}, class: "form-control" %>
        </div>
        <div class="form-group col-md-12 col-sm-12">
          <label class="form-label">住所</label>
          <%= f.text_field :address, placeholder: "〇〇市〇〇区〇〇町〇丁目〇〇-〇", class: "form-control" %>
        </div>
        <div class="form-group col-1md-2 col-sm-12">
          <label class="form-label">画像</label><br>
          <%= f.attachment_field :post_image %>
        </div>
        <div class="form-group col-md-12 col-sm-12">
        <%= f.submit '投稿する', class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
