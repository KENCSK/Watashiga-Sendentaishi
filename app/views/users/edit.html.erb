<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', user: @user %>
    </div>

      <div id="error_explanation">
        <% if @user.errors.any? %>
          <h3 class="text-danger"><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <ul><li class="text-danger"><%= message %></li></ul>
            <% end %>
          </ul>
        <% end %>
      </div>

        <%= form_with model:@user, local:true do |f| %>

        <h2>ユーザー情報編集画面</h2>

        <div class="form-group">
          <label>ユーザー名</label>
          <%= f.text_field :name, class:"form-control" %>
        </div>

        <div class="form-group">
          <label>プロフィール画像</label>
          <%= f.attachment_field :profile_image, placeholder: "Image",class:"form-control-file user_image" %>
        </div>


        <div class="form-group">
          <label>自己紹介</label>
          <%= f.text_area :biography, autofocus: true, id:"inputIntroduction", placeholder:"Introduction",class:"form-control introduction" %>
        </div>

        <div class="form-group">
          <%= f.submit "Update User",class:"btn btn-secondary"%>
        </div>
        <% end %>

    <div class="col-md-8 offset-md-1">
    </div>
  </div>
</div>