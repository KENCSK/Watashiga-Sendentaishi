<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'userinfo', user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>投稿一覧</h2>
        <table class="table">
         <thead>
           <th></th>
           <th>Title</th>
           <th>Opinion</th>
           <th colspan="3"></th>
         </thead>
         <tbody>
         <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to post_path(post.id) do %>
              <%= attachment_image_tag post, :post_image, format: 'jpeg', fallback: "no_image.jpg", size: '100x100' %><br>
              <% end %>
            </td>
            <td><%= link_to post.title, post_path(post.id) %></td>
            <td><%= post.text %></td>
            <!--<td>魅力度：< %= post.post_charms.count %></td>-->
            <% if @user.id == current_user.id %>
            <td><%= link_to "編集", edit_post_path(post.id) %></td>
            <% end %>
          </tr>
          <% end %>
          </tbody>
        </table>
     </div>
  </div>
</div>
