<% unless user_signed_in? %>
  <i class="fas fa-heart charm-btn"></i>
  <%= post.charms.count %>
<% else %>
  <% if current_user.already_charmed?(post) %>
    <%= link_to post_charms_path(post), method: :delete, remote: true do %>
      <i class="fas fa-heart charm-btn"></i>
    <% end %>
    <%= post.charms.count %>
  <% else %>
    <%= link_to post_charms_path(post), method: :post, remote: true do %>
      <i class="far fa-heart un-charm-btn"></i>
    <% end %>
    <%= post.charms.count %>
  <% end %>
<% end %>